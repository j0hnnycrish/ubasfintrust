{
  "name": "ubasfintrust-banking-api",
  "version": "1.0.0",
  "description": "UBAS Financial Trust Banking API Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:deploy": "npm run migrate:prod && node dist/server.js",
    "start:dev": "dotenv -e .env -- node dist/server.js",
    "env:init": "[ -f .env ] || cp .env.example .env",
    "db:up": "docker compose -f ../docker-compose.yml up -d postgres redis",
    "db:down": "docker compose -f ../docker-compose.yml down",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "dotenv -e .env -- knex --knexfile knexfile.cjs migrate:latest",
    "migrate:prod": "knex --knexfile knexfile.cjs migrate:latest",
    "migrate:verify": "node scripts/verify-migrations.js",
    "migrate:rollback": "knex --knexfile knexfile.cjs migrate:rollback",
    "seed": "knex --knexfile knexfile.cjs seed:run",
    "notifications": "node src/standalone-notification-system.js",
    "test:notifications": "node test-standalone-notifications.js",
    "setup:notifications": "node setup-notifications.js",
    "test:kyc": "node test-kyc-notifications.js",
    "test:complete": "npm run test:kyc && npm run test:notifications",
    "test:simple": "node test-notifications-simple.js",
    "generate:secrets": "node generate-secrets.js",
    "setup:env": "npm run generate:secrets",
    "postinstall": "echo postinstall"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/client-ses": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@sendgrid/mail": "^8.1.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/sanitize-html": "^2.16.0",
    "@types/uuid": "^9.0.7",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "mailgun.js": "^12.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.3",
    "redis": "^4.6.10",
    "resend": "^4.7.0",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "ts-node": "^10.9.1",
    "twilio": "^5.8.0",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.8",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
